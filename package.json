{
  "name": "wire-web-monorepo",
  "version": "1.0.0",
  "description": "Wire web apps monorepo (wire-webapp, account pages, team settings)",
  "main": "index.js",
  "license": "MIT",
  "private": true,
  "packageManager": "yarn@4.1.0",
  "workspaces": [
    "apps/*",
    "apps/wire-webapp/server"
  ],
  "dependencies": {
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5"
  },
  "scripts": {
    "postinstall": "husky install"
  },
  "prettier": "@wireapp/prettier-config",
  "lint-staged": {
    "*": "prettier --ignore-unknown --write",
    "*.less": [
      "stylelint --fix"
    ],
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ]
  }
}
